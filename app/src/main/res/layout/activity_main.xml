<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MainActivity">



    <LinearLayout
        android:id="@+id/chat_and_profile_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/imageview_btn_size"
            android:layout_height="@dimen/imageview_btn_size"
            android:padding="10dp"
            android:layout_marginEnd="@dimen/main_page_icon_marginEnd"
            android:src="@drawable/add"
            />
        <ImageView
            android:layout_width="@dimen/imageview_btn_size"
            android:layout_height="@dimen/imageview_btn_size"
            android:padding="10dp"
            android:layout_marginEnd="@dimen/main_page_icon_marginEnd"
            android:src="@drawable/shopping_basket"
            />
        <ImageView
            android:layout_width="@dimen/imageview_btn_size"
            android:layout_height="@dimen/imageview_btn_size"
            android:padding="10dp"
            android:layout_marginEnd="@dimen/main_page_icon_marginEnd"
            android:src="@drawable/chat"
            />
        <ImageView
            android:layout_width="@dimen/imageview_btn_size"
            android:padding="10dp"
            android:layout_height="@dimen/imageview_btn_size"
            android:src="@drawable/profile"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chat_and_profile_btn"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_black"
                android:padding="-20dp"
                android:text="@string/fragment_search_title"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/search_btn_frame">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:layout_toStartOf="@id/search_btn"
                    android:background="@null"
                    android:fontFamily="@font/notosanskr_medium"
                    android:hint="@string/fragment_search_edittext_hint"
                    android:includeFontPadding="false"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/search_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/search" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_line"
            />
        <androidx.core.widget.NestedScrollView
            android:id="@+id/main_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/recyclerview_title_txtview"
                    android:layout_marginEnd="@dimen/recyclerview_title_txtview"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="맞춤 추천 장난감"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"

                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/customized_recommend_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:scrollbars="none" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/recyclerview_title_txtview"
                    android:layout_marginEnd="@dimen/recyclerview_title_txtview"
                    android:fontFamily="@font/notosanskr_bold"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:text="카테고리"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/category_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="@dimen/recyclerview_item_margin_start_and_end"
                    android:scrollbars="none" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/recyclerview_title_txtview"
                    android:fontFamily="@font/notosanskr_bold"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:text="방금 올라온 장난감"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/just_came_up_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
                    android:layout_marginTop="9dp"
                    android:scrollbars="none" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/toy_upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 장난감 올리기"
        android:textSize="13dp"
        android:fontFamily="@font/notosanskr_bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:drawableLeft="@drawable/size_down_add"
        android:drawablePadding="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/my_toy_upload_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>