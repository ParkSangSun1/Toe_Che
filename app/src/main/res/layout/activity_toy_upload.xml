<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MyToyUpload.ToyUploadActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/notosanskr_black"
            android:includeFontPadding="false"
            android:text="장난감 올리기"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>

    <View
        android:id="@+id/title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title"
        android:background="@color/view_line" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--            사진을 추가해 주세요-->
            <LinearLayout
                android:id="@+id/select_picture_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_bold"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:text="사진을 추가해 주세요"
                    android:textColor="@color/black"
                    android:textSize="@dimen/toy_upload_page_title_txt_size" />

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/toy_upload_letters_and_spacing"
                    android:background="@drawable/select_picture_btn">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/camera" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanskr_medium"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="0/5"
                            android:textColor="@color/view_line"
                            android:textSize="15sp" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/my_picture_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line" />

            <!--            제목을 입력해 주세요-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_bold"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:text="제목을 입력해 주세요"
                    android:textColor="@color/black"
                    android:textSize="@dimen/toy_upload_page_title_txt_size" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/toy_upload_letters_and_spacing"
                    android:background="@drawable/my_toy_upload_edittext">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:fontFamily="@font/notosanskr_medium"
                        android:hint="내 게시물이 돋보이게!"
                        android:includeFontPadding="false"
                        android:maxLines="1" />
                </RelativeLayout>


            </LinearLayout>


            <View
                android:id="@+id/title_txt_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line" />

            <!--            제목을 입력해 주세요-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_bold"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:text="내용을 입력해 주세요"
                    android:textColor="@color/black"
                    android:textSize="@dimen/toy_upload_page_title_txt_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/toy_upload_letters_and_spacing"
                    android:background="@drawable/my_toy_upload_edittext">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:fontFamily="@font/notosanskr_medium"
                        android:hint="내용은 자세히!"
                        android:includeFontPadding="false" />
                </RelativeLayout>


            </LinearLayout>

            <View
                android:id="@+id/contents_txt_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line" />

            <!--            제목을 입력해 주세요-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_bold"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:text="카테고리를 추가해 주세요"
                    android:textColor="@color/black"
                    android:textSize="@dimen/toy_upload_page_title_txt_size" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/toy_upload_letters_and_spacing"
                    android:background="@drawable/my_toy_upload_edittext">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:fontFamily="@font/notosanskr_medium"
                        android:hint="내 게시물이 돋보이게!"
                        android:includeFontPadding="false" />
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/toy_post_upload_btn"
        android:fontFamily="@font/notosanskr_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="20dp"
        android:text="등록하기"
        android:textColor="@color/white"
        android:textSize="17dp" />

</RelativeLayout>